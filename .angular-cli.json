{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "project": {
    "name": "pfa-front"
  },
  "apps": [
    {
      "root": "src",
      "outDir": "dist",
      "assets": [
        "assets",
        "favicon.ico"
      ],
      "index": "index.html",
      "main": "main.ts",
      "polyfills": "polyfills.ts",
      "test": "test.ts",
      "tsconfig": "tsconfig.app.json",
      "testTsconfig": "tsconfig.spec.json",
      "prefix": "app",
      "styles": [
        "assets/css/style.css",
        "assets/css/fonts.css",
        "assets/css/fancybox.min.css",
        "assets/css/video-js.min.css",
        "assets/css/audioplayerv1.min.css"
      ],
      "scripts": [
        "assets/js/jquery-1.7.1.min.js",
        "assets/js/modernizr.custom.js",
        "assets/js/video.min.js",
        "assets/js/jquery.ui.widget.min.js",
        "assets/js/respond.min.js",
        "assets/js/jquery.easing-1.3.min.js",
        "assets/js/jquery.fancybox.pack.js",
        "assets/js/jquery.smartStartSlider.min.js",
        "assets/js/jquery.jcarousel.min.js",
        "assets/js/jquery.cycle.all.min.js",
        "assets/js/jquery.isotope.min.js",
        "assets/js/audioplayerv1.min.js",
        "assets/js/jquery.touchSwipe.min.js",
        "assets/js/custom.js"
            ],
      "environmentSource": "environments/environment.ts",
      "environments": {
        "dev": "environments/environment.ts",
        "prod": "environments/environment.prod.ts"
      }
    }
  ],
  "e2e": {
    "protractor": {
      "config": "./protractor.conf.js"
    }
  },
  "lint": [
    {
      "project": "src/tsconfig.app.json",
      "exclude": "**/node_modules/**"
    },
    {
      "project": "src/tsconfig.spec.json",
      "exclude": "**/node_modules/**"
    },
    {
      "project": "e2e/tsconfig.e2e.json",
      "exclude": "**/node_modules/**"
    }
  ],
  "test": {
    "karma": {
      "config": "./karma.conf.js"
    }
  },
  "defaults": {
    "styleExt": "css",
    "component": {}
  }
}
